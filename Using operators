#include <stdio.h>
#include <stddef.h>

int main() {
    int a = 13, b = 7;
    int sum, diff, prod;
    float div;

    sum = a + b;
    diff = a - b;
    prod = a * b;
    div = (float)a / b;

    printf("Arithmetic Operations:\n");
    printf("Sum: %d\n", sum);
    printf("Difference: %d\n", diff);
    printf("Product: %d\n", prod);
    printf("Division: %.2f\n\n", div);

    printf("Logical Operators:\n");
    if (a > 0 && b > 0)
        printf("Both a and b are positive.\n");
    if (a > 0 || b < 0)
        printf("At least one of them is positive.\n");
    if (!(a == b))
        printf("a and b are not equal.\n\n");

    printf("Assignment Operators:\n");
    a += 5; // a = a + 5
    printf("After a += 5, a = %d\n", a);
    b *= 2; // b = b * 2
    printf("After b *= 2, b = %d\n", b);
    
    return 0;
}
